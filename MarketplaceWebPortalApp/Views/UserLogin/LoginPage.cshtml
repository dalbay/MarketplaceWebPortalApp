
@{
    Layout = null;
    ViewBag.Title = "LoginPage";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    @Styles.Render("~/Content/styles.css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/font-awesome.css")
    @Styles.Render("~/Content/font-awesome.min.css")
</head>

<body class="loginPage container">
    @if (TempData["success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
            <strong>Congratulations!</strong> You have successfully created your account. Please sign in now!
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
            Oops we are sorry, something went wrong! Please try again!
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="signupHeader">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary btn-sm loginBtn" data-toggle="modal" data-target="#registerModal">
            Sign Up
        </button>
    </div>
    <div class="loginForm">
        <div class="d-flex justify-content-center">
            <div>
                <form action="@Url.Action("AuthUser", "UserLogin")" method="post">
                    <div class="displayLogo">
                        <img height="100" width="200" src="@Url.Content("~/Images/Joole.png")" />

                    </div>
                    <div class="loginTitle">
                        <p>Building Product Selection Platform</p>
                    </div>
                    <div class="form-group inputLbl">
                        <span>
                            <i class="fa fa-user"></i>
                        </span>
                        <input type="text" class="form-control form-control-sm" id="loginEmail" name="loginEmail" aria-describedby="emailHelp" placeholder="Username or Email" required>
                    </div>
                    <div class="form-group inputLbl">
                        <span>
                            <i class="fa fa-lock"></i>
                        </span>
                        <input type="password" class="form-control form-control-sm" id="loginPassword" name="loginPassword" placeholder="Password" required>
                        <small id="emailHelp" class="form-text text-muted text-center" style="color: red !important;">@TempData["wrongUsername"]</small>
                    </div>
                    <button type="submit" class="btn btn-sm btn-primary loginBtn">Log in</button>
                </form>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade " id="registerModal" tabindex="-1" role="dialog" aria-labelledby="registerModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Register as User</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"><i class="fa fa-times-circle"></i></span>
                    </button>
                </div>
                <form action="@Url.Action("Register", "UserLogin")" method="post">
                    <div class="modal-body">

                        <div class="row">
                            <label for="userNameReg" class="col-sm-4 col-form-label regLbl"></label>
                            <label for="imagePreview" class="regLbl">Image Preview</label>
                        </div>
                        <div class="row">
                            <label for="userNameReg" class="col-sm-4 col-form-label regLbl"></label>
                            <img height="100" width="100" id="imageOutput" src="@Url.Content("~/Images/default.png")">
                        </div>
                        <div class="row">
                            <label for="userNameReg" class="col-sm-4 col-form-label regLbl"></label>
                            <label class="regLbl">Your Profile Pic</label>
                        </div>
                        <div class="form-group row">
                            <label for="userNameReg" class="col-sm-4 col-form-label regLbl"></label>
                            <input type="file" name="yourImage" id="yourImage" onchange="loadImage(event)">
                        </div>
                        <div class="form-group row">
                            <label for="userNameReg" class="col-sm-4 col-form-label regLbl">UserName:</label>
                            <input type="text" class="form-control form-control-sm" id="userNameReg" name="userNameReg" aria-describedby="" placeholder="User Name" required>
                        </div>
                        <div class="form-group row">
                            <label for="emailReg" class="col-sm-4 col-form-label regLbl">Email Address:</label>
                            <input type="email" class="form-control form-control-sm" id="emailReg" name="emailReg" aria-describedby="" placeholder="Email Id" required>
                        </div>
                        <div class="form-group row">
                            <label for="passwordReg" class="col-sm-4 col-form-label regLbl">Password:</label>
                            <input type="password" class="form-control form-control-sm" id="passwordReg" name="passwordReg" aria-describedby="" placeholder="Password" required>
                        </div>
                        <div class="form-group row">
                            <label for="confirmPasswordReg" class="col-sm-4 col-form-label regLbl">Confirm Password:</label>
                            <input type="password" class="form-control form-control-sm" id="confirmPasswordReg" name="confirmPasswordReg" aria-describedby="" placeholder="Confirm Password" required>

                        </div>
                        <div class="row">
                            <label for="confirmError" class="col-sm-4 col-form-label regLbl"></label>
                            <small id="confirmError" class="form-text text-muted" style="color:red !important;">Password didn't match!</small>
                        </div>
                    </div>


                    <div class="modal-footer">
                        <button type="submit" class="btn btn-sm btn-primary loginBtn">Sign up</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/my_scripts.js")


</body>


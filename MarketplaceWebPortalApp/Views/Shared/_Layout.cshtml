<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    @Styles.Render("~/Content/styles.css")
    @Styles.Render("~/Content/autocomplete.css")
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/font-awesome.css")
    @Styles.Render("~/Content/font-awesome.min.css")
</head>

<body>
    <nav class="nav navigationBar d-flex navbar-expand-lg">
        <a class="navbar-brand" href="#">
            <div class="logo">
                <img height="50" width="100" src="@Url.Content("~/Images/Joole.png")" />
            </div>
        </a>
        <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="fa fa-bars"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <div class="navbar mx-auto">
                <div class="input-group searchBox">
                    <div class="input-group">
                        <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Category</button>
                        <div class="dropdown-menu categoryDropDown">
                            <a class="dropdown-item" href="#">Mechanical</a>
                            <a class="dropdown-item" href="#">Electrical</a>
                            <a class="dropdown-item" href="#">Stationary</a>
                            <a class="dropdown-item" href="#">Furniture</a>
                        </div>
                        <input type="text" class="form-control form-control-sm searchLbl" id="search" aria-label="Text input with dropdown button">
                        <button type="button" class="btn btn-sm btn-primary"><i class="fa fa-search"></i></button>
                    </div>
                </div>
            </div>
            <div class="my-2 ml-auto profilePicture">
                <img height="50" width="50" id="imageOutput" src="@Url.Content("~/Images/default.png")">
            </div>
        </div>


    </nav>
    
    @*<div class="container body-content">*@
    <div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/jqueryAutoComplete.js")
    @Scripts.Render("~/Scripts/jquery-ui-autoComplete.js")
    @Scripts.Render("~/Scripts/my_scripts.js")
    @RenderSection("scripts", required: false)
</body>
</html>